#include<iostream>
#include<string>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	string stroka,stroka2;
	cout << "введите вашу строку" << endl;
	getline(cin, stroka);
	int kolvo_a = 0;
	for (int i = 0; i < stroka.length(); i++)
	{	
		if (stroka[i] == 'a')
		{
			kolvo_a++;
		}
		if (kolvo_a == 1 && stroka[i]!='a')
		{
			stroka2 += stroka[i];
		}

	}
	cout<<"строка от (а до а): " << stroka2<<endl;
	system("pause");
	return 0;
}
